	excludesfile = ~/.dotfiles/gitignore_global
  editor = nvim
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[mergetool]
  keepBackup = false
[rebase]
	autosquash = true
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/bin/gpg
